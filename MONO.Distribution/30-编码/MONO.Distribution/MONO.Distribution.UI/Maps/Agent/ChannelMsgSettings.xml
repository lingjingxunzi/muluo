<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="ChannelMsgSettings" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!--实体类映射-->
  <alias>
    <typeAlias alias="ChannelMsgSettings" type="MONO.Distribution.Model.Agent.ChannelMsgSettings,MONO.Distribution.Model"/>
  </alias>

  <!--字段对应-->
  <resultMaps>
    <resultMap id="FD_ChannelMsgSettingsResult" class="ChannelMsgSettings">
      <result property="ChannelMsgSettingKey" column="ChannelMsgSettingKey"/>
      <result property="ChannelName" column="ChannelName"/>
      <result property="MsgTemp" column="MsgTemp"/>
      <result property="Status" column="Status"/>
    </resultMap>
  </resultMaps>

  <!--动态sql语句-->
  <statements>
    <!-- Insert statement.-->
    <insert id='InsertChannelMsgSettings' parameterClass='ChannelMsgSettings'>
      INSERT INTO FD_ChannelMsgSettings
      (
      ChannelName,
      MsgTemp,
      Status
      )
      VALUES
      (
      #ChannelName#,
      #MsgTemp#,
      #Status#
      <selectKey property="ChannelMsgSettingKey" resultClass="int" type="post"> SELECT cast(@@IDENTITY as int) AS id </selectKey>
      )
    </insert>


    <update id='UpdateChannelMsgSettings' parameterClass='ChannelMsgSettings'>
      UPDATE FD_ChannelMsgSettings
      SET
      <isGreaterThan prepend=" " compareValue="0" property="ChannelName">ChannelName=#ChannelName#</isGreaterThan>
      <isGreaterThan prepend="," compareValue="0"  property="MsgTemp">MsgTemp=#MsgTemp#</isGreaterThan>
      WHERE
      [ChannelMsgSettingKey] = #ChannelMsgSettingKey#
    </update>

    <delete id='DeleteChannelMsgSettings' parameterClass='ChannelMsgSettings'>
      DELETE FROM FD_ChannelMsgSettings
      WHERE
      [ChannelMsgSettingKey] = #ChannelMsgSettingKey#
    </delete>

    <delete id='DeleteChannelMsgSettingsByChannelName' parameterClass='int'>
      DELETE FROM FD_ChannelMsgSettings
      WHERE
      [ChannelName] = #Value#
    </delete>



    <!--动态查询语句-->
    <select id="SelectChannelMsgSettingsList" parameterClass="ChannelMsgSettings"   resultMap="FD_ChannelMsgSettingsResult">
      <![CDATA[SELECT 
      ChannelMsgSettingKey,
      ChannelName,
      MsgTemp ,
      Status
       ]]>
      <dynamic prepend="">
        <isEqual prepend="" property="IsStartPager" compareValue="true">
          FROM (SELECT ROW_NUMBER() OVER(ORDER BY ChannelMsgSettingKey DESC) AS RowNumber,*
          FROM FD_ChannelMsgSettings
          WHERE 1=1
          <isNotEmpty prepend="AND"   property="ChannelName">ChannelName=#ChannelName#</isNotEmpty>
          <isNotEmpty prepend="AND"   property="Status">Status=#Status#</isNotEmpty>
          )T
        </isEqual>
        <isEqual prepend="" property="IsStartPager" compareValue="false">
          FROM FD_ChannelMsgSettings
        </isEqual>
      </dynamic>
      where 1=1
      <dynamic >
        <isNotEmpty prepend="AND"   property="ChannelName">ChannelName=#ChannelName#</isNotEmpty>
        <isNotEmpty prepend="AND"   property="Status">Status=#Status#</isNotEmpty>
        <isGreaterThan prepend="AND" property="StartRecordIndex" compareValue="0">
          <![CDATA[RowNumber>=#StartRecordIndex#]]>
        </isGreaterThan>
        <isGreaterThan prepend="AND" property="EndRecordIndex" compareValue="0">
          <![CDATA[RowNumber<=#EndRecordIndex#]]>
        </isGreaterThan>
      </dynamic>

    </select>

    <select id="SelectChannelMsgSettingsCount" parameterClass="ChannelMsgSettings" resultClass="int">
      Select count(*)
      FROM FD_ChannelMsgSettings
      WHERE 1=1
      <dynamic >
        <isNotEmpty prepend="AND"   property="ChannelName">ChannelName=#ChannelName#</isNotEmpty>
        <isNotEmpty prepend="AND"   property="Status">Status=#Status#</isNotEmpty>
      </dynamic>
    </select>

    <select id="SelectChannelMsgSettingsByChannelName" parameterClass="ChannelMsgSettings" resultMap="FD_ChannelMsgSettingsResult">
      Select
      ChannelMsgSettingKey,
      ChannelName,
      MsgTemp,
      Status
      FROM FD_ChannelMsgSettings
      WHERE ChannelName = #ChannelName#
    </select>

    <select id="SelectChannelMsgSettingsByKey" parameterClass="ChannelMsgSettings" resultMap="FD_ChannelMsgSettingsResult">
      Select
      ChannelMsgSettingKey,
      ChannelName,
      MsgTemp,
      Status
      FROM FD_ChannelMsgSettings
      WHERE ChannelMsgSettingKey = #ChannelMsgSettingKey#
    </select>

  </statements>
</sqlMap>
