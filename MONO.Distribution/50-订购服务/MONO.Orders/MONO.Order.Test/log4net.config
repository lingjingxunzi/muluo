    <!--定义日志的输出媒介，下面定义日志以四种方式输出。也可以下面的按照一种类型或其他类型输出。-->
    <root>
      <level value="ALL" />
      <!--<appender-ref ref="AdoNetAppender_SQL" />-->
      <appender-ref ref="LogFileAppender1" />
    </root>
    <logger name="Developer">
      <level value="ALL"/>
      <appender-ref ref="LogFileAppender1"/>
